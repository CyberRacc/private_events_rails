<%= form_with(model: @event, local: true, class: "space-y-4") do |form| %>
    <div class="form-control">
        <%= form.label :title, class: "label" %>
        <%= form.text_field :title, class: "input" %>
    </div>

    <div class="form-control">
        <%= form.label :description, class: "label" %>
        <%= form.text_area :description, class: "textarea" %>
    </div>

    <div class="flex space-x-4">
        <div class="form-control">
            <%= form.label :start_time, class: "label" %>
            <%= form.datetime_field :start_time, class: "input input-lg" %>
        </div>
        <div class="form-control">
            <%= form.label :end_time, class: "label" %>
            <%= form.datetime_field :end_time, class: "input" %>
        </div>
    </div>

    <div class="form-control">
        <%= form.label :location, class: "label" %>
        <%= form.text_field :location, class: "input" %>
    </div>

    <%= form.submit "Save", class: "btn btn-primary" %>
<% end %>
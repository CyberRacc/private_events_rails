<h1 class="text-3xl font-bold"><%= @user.username %>'s Profile</h1>

<% if current_user == @user %>
  <p>Email: <%= @user.email %></p>
<% end %>

<h2 class="text-2xl font-bold mt-4">Events Created</h2>
<ul>
  <% @user.created_events.each do |event| %>
    <li>
      <%= link_to event.title, event_path(event), class: "text-blue-500 hover:underline" %>
    </li>
  <% end %>
</ul>

<h2 class="text-2xl font-bold mt-4">Upcoming Events Attending</h2>
<ul>
  <% @user.attended_events.where('start_time > ?', Time.now).each do |event| %>
    <li>
      <%= link_to event.title, event_path(event), class: "text-blue-500 hover:underline" %>
    </li>
  <% end %>
</ul>

<h2 class="text-2xl font-bold mt-4">Past Events Attended</h2>
<ul>
  <% @user.attended_events.where('end_time <= ?', Time.now).each do |event| %>
    <li>
      <%= link_to event.title, event_path(event), class: "text-blue-500 hover:underline" %>
    </li>
  <% end %>
</ul>

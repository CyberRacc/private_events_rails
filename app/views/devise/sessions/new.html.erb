<h2 class="text-3xl font-bold">Sign In</h2>

<div class="container">
  <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "space-y-4" do |f| %>
    <div class="form-control">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= f.check_box :remember_me, class: "checkbox"%>
      <%= f.label :remember_me %>
    </div>

    <%= f.submit "Log in", class: "btn btn-primary w-full" %>
  <% end %>
</div>

<%= render "devise/shared/links" %>

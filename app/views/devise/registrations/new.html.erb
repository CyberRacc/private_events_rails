<h2 class="text-3xl font-bold">Sign Up</h2>

<%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "space-y-4" do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-error">
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-control">
    <%= f.label :username, class: "label" %>
    <%= f.text_field :username, autofocus: true, class: "input input-bordered w-full #{'input-error' if resource.errors[:username].any?}" %>
    <% resource.errors[:username].each do |error| %>
      <p class="text-red-500 text-xs mt-1"><%= error %></p>
    <% end %>
  </div>

  <div class="form-control">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full #{'input-error' if resource.errors[:email].any?}" %>
    <% resource.errors[:email].each do |error| %>
      <p class="text-red-500 text-xs mt-1"><%= error %></p>
    <% end %>
  </div>

  <div class="form-control">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full #{'input-error' if resource.errors[:password].any?}" %>
    <% resource.errors[:password].each do |error| %>
      <p class="text-red-500 text-xs mt-1"><%= error %></p>
    <% end %>
  </div>

  <div class="form-control">
    <%= f.label :password_confirmation, class: "label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full #{'input-error' if resource.errors[:password_confirmation].any?}" %>
    <% resource.errors[:password_confirmation].each do |error| %>
      <p class="text-red-500 text-xs mt-1"><%= error %></p>
    <% end %>
  </div>

  <%= f.submit "Create my account", class: "btn btn-primary w-full" %>
<% end %>

<%= render "devise/shared/links" %>
